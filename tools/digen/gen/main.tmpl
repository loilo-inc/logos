package main

import (
	"github.com/loilo-inc/logos/tools/digen"
	"log"
	"os"
	"path/filepath"
)

func main() {
	manifestFile := os.Args[1]
	abs, err := filepath.Abs(manifestFile)
	if err != nil {
		log.Fatalf(err.Error())
	}
	outDir := filepath.Dir(abs)
	if err := digen.Generate(abs, outDir, body); err != nil {
		log.Fatal(err.Error())
	}
}

var body = `
{{.Body}}
`
